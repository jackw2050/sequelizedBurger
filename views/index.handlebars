
  <div class="col-md-12">
    <h1 class="text-center ">Eat-da-Burger!</h1>
  </div>

<div class="col-md-12">
  <img class="center-block col-md-offset-4 " src="http://pngimg.com/upload/burger_sandwich_PNG4145.png" alt="Burger View" style="width:200px;height:150px; ">
</div>





<div class="col-md-4">
  <div class="well">
    <h2>My burgers!</h2>
    <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
       <li>
         {{this.burger_name}}

         <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit" class="btn-sm btn-primary ">Devour it!</button>
          </form>

           
             </li>
      {{/unless}}
    {{/each}}
    </ul>
  </div>
</div>




<div class="col-md-4">
  <div class="well">
    <h2>Add a burger</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
      <label for="ca">burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">

      
      <input type="hidden" name="devoured" value="0"> 
    </div>

    <button type="submit" class="btn-sm btn-primary btn-block" >Add burger</button>
    </form>
  </div>
</div>




<div class="col-md-4">
  <div class="well">
    <h2>Burgers eaten!</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
        <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">

        </form>


        </li>
      {{/if}}
    {{/each}}
    </ul>
  </div>
</div>


